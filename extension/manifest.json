{
    "manifest_version": 2,
    "name": "PeaKD UnFUBAR",
    "version": "0.0.0.1",
    "description": "PeaKD UnFUBAR",
  
    "background": {
      "scripts": ["background.js"]
    },
  
    "browser_action": {
      "default_title": "PeaKD UnFUBAR",
      "default_popup": "popup.html"
    },

    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "*://api.pharesim.me/*",
      "*://peakd.com/*"
    ],

    "icons": {
      "16": "assets/16x16.png",
      "48": "assets/48x48.png",
      "128": "assets/128x128.png"
    }
  }
